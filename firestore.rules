rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can only access their own document
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }

      // Categories subcollection
      match /categories/{categoryId} {
        allow read, write: if isOwner(userId);
      }

      // Categorization rules subcollection
      match /rules/{ruleId} {
        allow read, write: if isOwner(userId);
      }

      // Bank connections subcollection
      match /bankConnections/{connectionId} {
        allow read, write: if isOwner(userId);
      }

      // Budgets subcollection
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }

      // ICS statement import records
      match /icsStatements/{statementId} {
        allow read: if isOwner(userId);
        // Create only by Cloud Functions, no client writes
        allow create, update, delete: if false;
      }

      // Raw bank transactions subcollection (for debugging/audit)
      match /rawBankTransactions/{rawId} {
        allow read: if isOwner(userId);
        // Delete allowed for reset functionality, create/update only by Cloud Functions
        allow delete: if isOwner(userId);
        allow create, update: if false;
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
